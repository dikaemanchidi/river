<div class="container">
<div class="content">

  <%= form_with(model: blog, local: true) do |form| %>
    <% if blog.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

        <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.text_field :title, class:"form-control", placeholder:"Enter Title"  %><br>
    </div>

    <div class="field">
      <%= form.text_area :content, class:"form-control", placeholder:"Enter Content"  %><br>
    </div>

    <div class="field">
      <%= form.text_field :area, class:"form-control", placeholder:"Enter River location"  %><br>
    </div>

    <div class="field">
      <%= form.date_select :time %><br>
    </div>

    <div class="field">
      <%= form.text_field :ph_value, class:"form-control", placeholder:"Enter PH Value"  %><br>
    </div>

    <div class="field">
      <%= form.text_field :clarity_value , class:"form-control", placeholder:"Enter Clarity value" %><br>
    </div>

    <div class="field">
      <%= form.text_field :temperature_value, class:"form-control", placeholder:"Enter Temperature Value" %><br>
    </div>

    <div class="actions">
    <%= form.submit "Add River", class:"btn btn-primary" %><br>
    </div>
  <% end %>
  </div>
</div>
