<p id="notice"><%= notice %></p>

<h1>Blogs</h1>
<%= form_tag(blogs_path, method: :get) do  %>
               <%= text_field_tag :terms, params[:terms], placeholder: "search by area" %>
               <%= submit_tag 'Search', area:nil %>
<% end %>

  <table class="table table-dark table-hover table-bordered">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Area</th>
      <th scope="col">Time</th>
      <th scope="col">pH value</th>
      <th scope="col">clarity value</th>
      <th scope="col">Temperature</th>
      <th scope="col">Status</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <body>
     <% @blogs.each do |blog| %>
       <tr>
         <td><%= blog.title %></td>
         <td><%= blog.content %></td>
         <td><%= blog.area %></td>
         <td><%= blog.time %></td>
         <td><%= blog.ph_value %></td>
         <td><%= blog.clarity_value %></td>
         <td><%= blog.temperature_value %></td>
         <td><%= blog.status %></td>
         <td><%= link_to 'Show', blog %></td>
         <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
         <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
 <% end %>
   </body>
 </table>
 <%= link_to 'New Blog', new_blog_path, class:"btn btn-success" %>
