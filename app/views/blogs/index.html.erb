<p id="notice"><%= notice %></p>

<h1>Blogs</h1>
<%= form_tag(blogs_path, method: :get) do  %>
               <%= text_field_tag :terms, params[:terms], placeholder: "search by area" %>
               <%= submit_tag 'Search', area:nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Area</th>
      <th>Time</th>
      <th>Ph value</th>
      <th>Clarity value</th>
      <th>Temperature value</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <body>
     <% @blogs.each do |blog| %>
       <tr>
         <td><%= blog.title %></td>
         <td><%= blog.content %></td>
         <td><%= blog.area %></td>
         <td><%= blog.time %></td>
         <td><%= blog.ph_value %></td>
         <td><%= blog.clarity_value %></td>
         <td><%= blog.temperature_value %></td>
         <td><%= blog.status %></td>
         <td><%= link_to 'Show', blog %></td>
         <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
         <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
 <% end %>
   </body>
 </table>
 <%= link_to 'New Blog', new_blog_path %>
